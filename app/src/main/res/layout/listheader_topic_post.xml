<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="@dimen/padding_default"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            android:id="@+id/title"
            android:textSize="@dimen/text_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_default"
            android:text="3 มกราคม เวลา 21:40 น."
            android:textSize="@dimen/text_caption"
            android:id="@+id/date"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:layout_alignRight="@+id/title"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เดี๋ยวเร็วๆ นี้ จะทำให้ดู Tag และ Club ของห้องต่างๆ ได้นะครับ คาดว่าจะเป็น วันพรุ่งนี้มืดๆ หรือไม่ก็วันเสาร์ ครับผม ขอบคุณที่ใช้งานนะครั"
            android:id="@+id/body"
            android:textSize="@dimen/text_body"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/date"
            android:layout_alignRight="@+id/title"/>

    <View
            android:id="@+id/separator"
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_default"
            android:layout_marginBottom="@dimen/padding_default"
            android:layout_below="@+id/body"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:drawablePadding="@dimen/padding_default"
            android:drawableLeft="@drawable/ic_action_thumbs_up"
            android:gravity="center_vertical"
            android:id="@+id/votes"
            style="?android:borderlessButtonStyle"
            android:layout_alignLeft="@+id/commentNo"
            android:layout_below="@+id/separator"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:drawableLeft="@drawable/ic_action_mood"
            android:id="@+id/emo"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/padding_default"
            style="?android:borderlessButtonStyle"
            android:layout_toRightOf="@+id/votes"
            android:layout_alignTop="@+id/votes"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:gravity="right|center_vertical"
            android:id="@+id/author"
            android:paddingTop="@dimen/padding_default"
            android:paddingBottom="@dimen/padding_default"
            android:layout_alignTop="@+id/emo"
            android:layout_toLeftOf="@+id/authorPic"
            android:layout_toRightOf="@+id/emo"
            android:layout_alignBottom="@+id/emo"/>

    <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_height="wrap_content"
            android:id="@+id/authorPic"
            android:layout_alignRight="@+id/separator"
            android:layout_alignEnd="@+id/separator"
            android:layout_alignTop="@+id/author"
            android:layout_alignBottom="@+id/emo"/>
</RelativeLayout>