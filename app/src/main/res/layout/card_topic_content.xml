<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สมาชิกหมายเลข 909277"
            android:id="@+id/author"
            android:singleLine="true"
            android:layout_marginRight="@dimen/padding_default"
            android:textColor="?android:textColorSecondaryInverse"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/votes"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/comments"
            android:textColor="?android:textColorSecondaryInverse"

            android:drawablePadding="@dimen/padding_default"

            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:gravity="center_vertical"
            android:id="@+id/votes"
            android:textColor="?android:textColorSecondaryInverse"

            android:drawablePadding="@dimen/padding_default"
            android:layout_marginRight="@dimen/padding_default"
            android:layout_toLeftOf="@+id/comments"
            android:layout_below="@+id/title"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="วิทยาศาสตร์ นักวิทยาศาสตร์ ชีววิทยา"
            android:id="@+id/tags"
            android:layout_marginRight="@dimen/padding_default"
            android:textColor="@color/text_color_tag"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/author"/>
</RelativeLayout>