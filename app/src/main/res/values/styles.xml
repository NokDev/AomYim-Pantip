<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
    <!--</style>-->

    <style name="RecommendDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_from_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_to_right</item>
    </style>

    <style name="style_topic_stat">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_topic_card">
        <item name="android:background">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <style name="listitem_topic">
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
        <item name="android:layout_marginTop">@dimen/padding_narrow</item>
        <item name="android:layout_marginBottom">@dimen/padding_narrow</item>
    </style>

    <style name="drawer_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?android:listChoiceBackgroundIndicator</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">#dd000000</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
