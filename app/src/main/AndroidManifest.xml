<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nantaphop.pantipfanapp"
    android:versionCode="20"
    android:versionName="2" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.nantaphop.pantipfanapp.BaseApplication_"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Pantip" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="pantipfanapp.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />


        <activity
            android:name="com.nantaphop.pantipfanapp.MainActivity_"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.nantaphop.pantipfanapp.TestActivity_"
                android:label="Test Pantip" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
